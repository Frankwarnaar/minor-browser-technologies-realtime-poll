<% extend("_base/layout") %>

<form method="POST" action="/polls/create">
	<h1>Nieuwe poll</h1>
	<label>Vraag
		<textarea name="question"></textarea>
	</label>
	<div id="inputs">
		<% for (var i = 1; i<6; i++) { %>
			<label for="answer<%=i%>">Antwoord <%= i %>
				<input id="answer<%= i %>" type="text" class="answer-input" name="answer<%= i %>" placeholder="antwoord"/>
			</label>
		<% } %>
	</div>
	<button id="newInput" class="hidden">Nieuw antwoord</button>
	<input type="submit" value="Ok">
</form>

<section>
	<h2>Actieve polls</h2>
	<ul>
		<% polls.map(poll => { %>
			<li>
				<h3><%= poll.question %></h3>
				<a href="/polls/get/<%= poll.id %>">Stemmen</a>
				<a href="/polls/results/<%= poll.id %>">Resultaten</a>
			</li>
		<% }) %>
	</ul>
	<% if (polls.length === 0) { %>
		<p>Er zijn geen polls actief</p>
	<% } %>
</section>
